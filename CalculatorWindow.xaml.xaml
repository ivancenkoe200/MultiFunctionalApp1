<Window x:Class="MultiFunctionalApp.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="200" Width="300">
    <StackPanel>
        <TextBlock Text="Введите знак операции (+, -, *, /):" Margin="10"/>
        <TextBox Name="OperatorInput" Width="100" Margin="10" />
        <Button Content="Вычислить" Click="CalculateButton_Click" />
        <Label Name="CalculationResult" Margin="10" />
    </StackPanel>
</Window>